{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Home Assistant",
      "type": "debugpy",
      "request": "launch",
      "module": "homeassistant",
      "args": ["-c", "/workspaces/config"],
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Home Assistant (Debug Mode)",
      "type": "debugpy",
      "request": "launch",
      "module": "homeassistant",
      "args": ["-c", "/workspaces/config", "--debug"],
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "--no-cov"],
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "pytest: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v", "--no-cov"],
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to Home Assistant",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/workspaces/homeassistant-zowietek"
        }
      ],
      "justMyCode": false
    }
  ]
}
